---
import ImageGenerator from '../components/ImageGenerator';
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>FLUX.2 [klein] Demo</title>
  <style is:global>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
      background: #fafafa;
      min-height: 100vh;
      color: #171717;
    }

    .container {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }

    .main-content {
      width: 100%;
      max-width: 640px;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .header {
      text-align: left;
      margin-bottom: 0.5rem;
    }

    .header h1 {
      font-size: 2.5rem;
      font-weight: 700;
      letter-spacing: -0.02em;
      color: #171717;
    }

    .header .klein {
      font-weight: 400;
      color: #737373;
    }

    .header .tagline {
      font-size: 1rem;
      color: #737373;
      margin-top: 0.25rem;
    }

    .header .tagline a {
      color: #525252;
      text-decoration: none;
    }

    .header .tagline a:hover {
      text-decoration: underline;
    }

    .settings-row {
      display: flex;
      align-items: flex-start;
      gap: 1.5rem;
    }

    .api-key-container {
      text-align: left;
      flex: 1;
    }

    .model-select {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding-top: 0.25rem;
    }

    .model-select label {
      font-size: 0.875rem;
      color: #525252;
      white-space: nowrap;
    }

    .model-select select {
      padding: 0.5rem 0.75rem;
      border: 1px solid #e5e5e5;
      border-radius: 6px;
      font-size: 0.875rem;
      background: white;
      cursor: pointer;
    }

    .model-select select:focus {
      outline: none;
      border-color: #a3a3a3;
    }

    .api-key-container input {
      width: 100%;
      max-width: 320px;
      padding: 0.75rem 1rem;
      border: 1px solid #e5e5e5;
      border-radius: 8px;
      font-size: 0.875rem;
      background: white;
    }

    .api-key-container input:focus {
      outline: none;
      border-color: #a3a3a3;
    }

    .api-key-hint {
      font-size: 0.8125rem;
      color: #737373;
      margin-top: 0.5rem;
    }

    .api-key-hint a {
      color: #525252;
      text-decoration: none;
    }

    .api-key-hint a:hover {
      text-decoration: underline;
    }

    .image-container {
      position: relative;
      aspect-ratio: 1;
      width: 100%;
      border-radius: 12px;
      overflow: hidden;
      background: #f5f5f5;
    }

    .image-container.drag-over {
      box-shadow: inset 0 0 0 4px #a3a3a3;
    }

    .placeholder {
      position: absolute;
      inset: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      color: #a3a3a3;
      text-align: center;
      padding: 2rem;
    }

    .placeholder p {
      font-size: 1rem;
    }

    .placeholder .hint {
      font-size: 0.875rem;
      margin-top: 0.5rem;
      opacity: 0.7;
    }

    .placeholder.hidden {
      display: none;
    }

    .generated-image {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: opacity 0.5s ease-out;
    }

    .generated-image.previous {
      z-index: 1;
    }

    .generated-image.current {
      z-index: 2;
      opacity: 0;
    }

    .generated-image.current.show {
      opacity: 1;
    }

    .drop-overlay {
      position: absolute;
      inset: 0;
      z-index: 20;
      background: rgba(255, 255, 255, 0.9);
      display: none;
      align-items: center;
      justify-content: center;
      font-size: 1.125rem;
      color: #525252;
    }

    .drop-overlay.visible {
      display: flex;
    }

    .loading-overlay {
      position: absolute;
      inset: 0;
      z-index: 10;
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(4px);
      display: none;
      align-items: center;
      justify-content: center;
    }

    .loading-overlay.visible {
      display: flex;
    }

    .spinner {
      width: 32px;
      height: 32px;
      border: 2px solid #d4d4d4;
      border-top-color: #404040;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
    }

    .spinner.small {
      width: 20px;
      height: 20px;
    }

    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }

    .prompt-container {
      position: relative;
    }

    .prompt-container input {
      width: 100%;
      padding: 1rem 1.25rem;
      font-size: 1.125rem;
      border: 1px solid #e5e5e5;
      border-radius: 12px;
      background: white;
      color: #171717;
      transition: all 0.2s;
    }

    .prompt-container input::placeholder {
      color: #a3a3a3;
    }

    .prompt-container input:focus {
      outline: none;
      border-color: #a3a3a3;
      box-shadow: 0 0 0 3px rgba(163, 163, 163, 0.1);
    }

    .gen-time {
      position: absolute;
      right: 1rem;
      top: 50%;
      transform: translateY(-50%);
      font-size: 0.875rem;
      color: #a3a3a3;
      font-variant-numeric: tabular-nums;
    }

    .loading-overlay .spinner {
      display: block;
    }

    .loading-overlay .check-icon {
      display: none;
      color: #22c55e;
    }

    .loading-overlay.complete .spinner {
      display: none;
    }

    .loading-overlay.complete .check-icon {
      display: block;
    }

    .edit-mode-toggle {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: -0.5rem;
    }

    .toggle-switch {
      position: relative;
      width: 36px;
      height: 20px;
      background: #e5e5e5;
      border-radius: 10px;
      cursor: pointer;
      transition: background 0.2s;
    }

    .toggle-switch.active {
      background: #171717;
    }

    .toggle-switch::after {
      content: '';
      position: absolute;
      top: 2px;
      left: 2px;
      width: 16px;
      height: 16px;
      background: white;
      border-radius: 50%;
      transition: transform 0.2s;
    }

    .toggle-switch.active::after {
      transform: translateX(16px);
    }

    .toggle-switch.disabled {
      opacity: 0.4;
      cursor: not-allowed;
    }

    .edit-mode-toggle.disabled .toggle-label,
    .edit-mode-toggle.disabled .toggle-description {
      opacity: 0.4;
    }

    .toggle-label {
      font-size: 0.875rem;
      color: #525252;
    }

    .toggle-description {
      font-size: 0.75rem;
      color: #a3a3a3;
      margin-left: 0.25rem;
    }

    @media (max-width: 640px) {
      .container {
        padding: 1rem;
      }

      .header h1 {
        font-size: 1.75rem;
      }

      .header .tagline {
        font-size: 0.875rem;
      }

      .prompt-container input {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>
  <ImageGenerator client:load />
</body>
</html>
